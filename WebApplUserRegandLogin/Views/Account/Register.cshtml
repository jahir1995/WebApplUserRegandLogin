@model WebApplUserRegandLogin.Models.UserModel
@{
    ViewBag.Title = "Register";
}

@*@Html.AntiForgeryToken();*@

@using (Html.BeginForm())
{

<div class="form-horizontal">
    <h4>User Registration</h4>
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, null, new { @class = "control-label" })
        <div class="form-text-field">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, null, new { @class = "control-label" })
        <div class="form-text-field">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, null, new { @class = "control-label" })
        <div class="form-text-field">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, null, new { @class = "control-label" })
        <div class="form-text-field">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfirmPassword, null, new { @class = "control-label" })
        <div class="form-text-field">
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="register-submit">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
        <div class="click-login">
            <p>If you have account already please click &nbsp</p>
            @Html.ActionLink("Login", "Login")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <label class="alert-warning">@ViewBag.DuplicateMessage</label>
        </div>
    </div>
</div>
}
<style>
    body {
        background: #ededeb;
    }
    .form-group .form-control {
        max-width: none;
    }

    .form-horizontal {
        width: 500px;
        margin: 100px auto 0;
        background: #fff;
        box-shadow: 0 0 20px rgb(48 48 48 / 20%);
        border-radius: 10px;
    }

        .form-horizontal h4 {
            padding: 30px 0 0 40px;
            font-weight: 600;
        }

        .form-horizontal .form-group {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            align-items: center;
            margin-left: auto;
            margin-right: auto;
            width: 90%;
        }

    .form-text-field {
        width: 65%;
    }

    .form-horizontal .control-label {
        width: 30%;
        margin-right: 20px;
    }

    .register-submit {
        display: flex;
        justify-content: flex-end;
        width: 100%;
        margin-right: `5px;
    }

        .register-submit input[type="submit"] {
            padding: 10px 40px;
            margin: 10px 0 0;
        }

    .click-login {
        display: flex;
        width: 100%;
        margin: 20px 0 10px 0;
        justify-content: flex-end;
    }

        .click-register p {
            margin-right: 10px;
        }
</style>



